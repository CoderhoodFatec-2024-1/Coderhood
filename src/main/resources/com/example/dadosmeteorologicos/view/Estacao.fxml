<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dadosmeteorologicos.controller.EstacaoController">
    <cursor>
        <Cursor fx:constant="DEFAULT" />
    </cursor>
  <children>
      <TableView fx:id="estacoes" layoutX="110.0" layoutY="129.0" prefHeight="240.0" prefWidth="340.0">
        <columns>
          <TableColumn fx:id="ColumnEstacao" prefWidth="75.0" text="Estação" />
          <TableColumn fx:id="ColumnSigla" prefWidth="75.0" text="Sigla" />
            <!-- <TableColumn fx:id="ColumnCidade" prefWidth="75.0" text="Cidade" /> -->
        <TableColumn fx:id="ColumnButton" prefWidth="113.0" text="Botão" />
        </columns>
      </TableView>
      <Button fx:id="adicionarNovaEstacao" layoutX="614.0" layoutY="271.0" mnemonicParsing="false" onAction="#adicionarNovaEstacao" text="Adicionar Nova Estação" />
      <TextField fx:id="novaEstacao" layoutX="570.0" layoutY="224.0" prefHeight="25.0" prefWidth="230.0" />
      <TextField fx:id="novaCidade" layoutX="570.0" layoutY="179.0" prefHeight="25.0" prefWidth="230.0" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="502.0" layoutY="183.0" prefHeight="17.0" prefWidth="49.0" text="Cidade" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="502.0" layoutY="228.0" prefHeight="17.0" prefWidth="49.0" text="Estação" textAlignment="CENTER" />
      <Label layoutX="581.0" layoutY="129.0" text="Adicionar Nova Estação">
        <font>
            <Font size="20.0" />
        </font>
      </Label>
      <!-- <Button fx:id="buscaEstacao" layoutX="400.0" layoutY="420.0" mnemonicParsing="false" onAction="#buscaEstacao" text="Buscar Estações" /> -->
  </children>
</AnchorPane>
